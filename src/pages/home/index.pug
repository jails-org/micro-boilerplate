extends /layouts/default.pug

block head
	script( type="module" src="./index.ts" )
	+Data( API.users )

block content

	app-home.text-center.p-5

		div.p-10
			include ./logo.svg

		h1.text-4xl Home Page
		h2.p-5 Counter example

		div.flex.items-center.justify-center.space-x-5
			button.text-3xl( data-plus ) +
			span.block.w-5( html-inner="counter" )
			button.text-3xl( data-minus ) -

		a.block.py-5.text-md(href="/sample" class="text-[#336699]") Go to Sample Page
